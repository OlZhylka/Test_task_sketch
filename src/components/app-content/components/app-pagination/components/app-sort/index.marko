class {
  setSortingValue(event) {
    this.emit("emSetSortingValue", {
      sortingValue: event.target.value,
    });
  }
}

<section.sortItems>
  <div.columns.is-vcentered>
    <div.column.is-native.sortLabel>Sort by</div>
    <div.column.select>
      <select.selectForSort onChange("setSortingValue")>
        <option value="" selected disabled hidden>Sort options</option>
        <option selected=(input.sortValue=="priceUp") value="priceUp">ascending price</option>
        <option selected=(input.sortValue=="priceDown") value="priceDown">descending price</option>
      </select>
    </div>
  </div>
</section>
